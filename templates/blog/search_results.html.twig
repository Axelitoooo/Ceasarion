    {% if results is not empty %}
        <ul>
            {% for result in results %}
                {{ include('blog/_search_results.html.twig', { 'result': result }) }}
            {% endfor %}
        </ul>
    {% else %}
        <div class="jumbotron">{{ 'post.no_posts_found'|trans }}</div>
    {% endif %}

    {# Pagination code here if needed #}
{% endblock %}

