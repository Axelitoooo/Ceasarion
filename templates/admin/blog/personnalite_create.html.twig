{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_personnalite_create' %}

{% block main %}
    <h1>{{ 'action.create_personnalite'|trans }}</h1>

    {{ form_start(form) }}
        {{ form_row(form.name) }}
        {{ form_row(form.description) }}
        {{ form_row(form.dateNaissance) }}
        {{ form_row(form.dateMort) }}
        {{ form_row(form.imageURL) }}

        <button type="submit" class="btn btn-primary">
            <i class="fa fa-save" aria-hidden="true"></i> {{ 'action.save'|trans }}
        </button>
    {{ form_end(form) }}
{% endblock %}

{% block sidebar %}
    {{ parent() }}

    {{ show_source_code(_self) }}
{% endblock %}
