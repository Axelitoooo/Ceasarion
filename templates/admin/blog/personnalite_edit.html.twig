{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_personnalite_edit' %}

{% block main %}
    <h1>{{ 'title.edit_personnalite'|trans({'id': personnalite.id}) }}</h1>

    {{ include('admin/blog/personnalite_form.html.twig', {
        form: form,
        button_label: 'action.save'|trans,
        include_back_to_home_link: true,
    }, with_context = false) }}
{% endblock %}

{% block sidebar %}
    <div class="section">
        <a href="{{ path('personnalite_show', {id: personnalite.id}) }}" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-eye" aria-hidden="true"></i> {{ 'action.show_personnalite'|trans }}
        </a>
    </div>

    <div class="section actions">
        {{ include('admin/blog/_delete_form.html.twig', {personnalite: personnalite}, with_context = false) }}
    </div>

    {{ parent() }}

    {{ show_source_code(_self) }}
{% endblock %}
